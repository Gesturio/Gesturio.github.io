doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='style.css')
    script(data-main='js/init', src='js/libs/require.js')
  body(ng-controller="IndexCtrl")
    #left.inline
      .task
        .word
          .char(ng-repeat="char in word track by $index") {{char}}
      .progress
        .done
      #visualizer

    #right.inline
      .score
        .total
          .title SCORE:
          | {{ score.total }}
      .dictionary

      .alphabet
        .char(ng-repeat="char in alphabet" ng-class="{current: char.name == recognized}")
          img(src="img/dic/ru/{{char.file}}.png" width="100%")
      .params
        .gesture_params



